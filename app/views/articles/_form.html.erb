<div class="form-body new_article">
<h3 class="title">Create a new article</h3>
<%= form_with(model: article, html: {:class => 'new_article'}) do |form| %>
 <%= new_form_error(@article) %>

  <div class="field">
    <%= form.text_field :title, placeholder:"Enter article title"%>
  </div>

  <div class="field">
    <%= form.text_area :text, placeholder:"Type article here"%>
  </div>

  <div class="field">
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "Select Category"}%>
  </div>

  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit "Post Article", class:"submit"%>
  </div>
<% end %>

</div>
